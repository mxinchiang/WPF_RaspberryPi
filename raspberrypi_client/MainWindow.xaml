<Window x:Class="raspberrypi_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"     
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:raspberrypi_client"
        mc:Ignorable="d"
        Title="raspberrypi_client" Height="477" Width="605">
    <Grid Margin="0,0,0,6">
        <d3:ChartPlotter x:Name="plotter" Margin="24,61,0,83" HorizontalAlignment="Left" Width="312"/>
        <d3:ChartPlotter x:Name="plotter_1" Margin="352,61,37,0" Height="146" VerticalAlignment="Top"/>
        <TextBox x:Name="xip" HorizontalAlignment="Left" Height="22" Margin="53,16,0,0" TextWrapping="Wrap" Text="192.168.0.130" VerticalAlignment="Top" Width="132"/>
        <TextBox x:Name="xport" HorizontalAlignment="Left" Height="23" Margin="248,16,0,0" TextWrapping="Wrap" Text="6666" VerticalAlignment="Top" Width="88"/>
        <TextBox x:Name="sendMessage" Margin="93,0,261,37" TextWrapping="Wrap" Height="23" VerticalAlignment="Bottom"/>
        <RichTextBox x:Name="richTextBox" Margin="370,231,37,83" VerticalScrollBarVisibility="Visible">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label x:Name="IP" Content="IP:" HorizontalAlignment="Left" Margin="24,16,0,0" VerticalAlignment="Top" Height="22"/>
        <Label x:Name="PORT" Content="PORT:" HorizontalAlignment="Left" Margin="198,16,0,0" VerticalAlignment="Top" Height="22"/>
        <Label x:Name="MESSAGE" Content="Message:" HorizontalAlignment="Left" Margin="24,0,0,37" Height="25" VerticalAlignment="Bottom"/>
        <Button x:Name="send" Content="Sent" Margin="0,0,151,39" Click="send_Click" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="94"/>
        <Button x:Name="close" Content="Close" Margin="0,0,33,39" Click="close_Click" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="94"/>
        <Button x:Name="connect" Content="Connect" Margin="0,16,37,0" HorizontalAlignment="Right" Width="101" Height="22" VerticalAlignment="Top" Click="connect_Click"/>
    </Grid>
</Window>
